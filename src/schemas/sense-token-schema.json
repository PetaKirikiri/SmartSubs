{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sense Token Schema",
  "description": "Source of truth for sense token structure (Thai tokens)",
  "type": "object",
  "required": ["index", "senses"],
  "properties": {
    "index": {
      "type": "number",
      "description": "Token index matching wordReferenceIdsThai position"
    },
    "senses": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "#/definitions/orstSense"
          },
          {
            "$ref": "#/definitions/normalizedSense"
          }
        ]
      },
      "description": "Array of sense objects for this token (can be ORST or normalized)"
    }
  },
  "definitions": {
    "orstSense": {
      "type": "object",
      "properties": {
        "id": {
          "type": ["number", "string"]
        },
        "index": {
          "type": "number"
        },
        "selected": {
          "type": "boolean"
        },
        "thaiWord": {
          "type": "string"
        },
        "senseNumber": {
          "type": "string"
        },
        "pos": {
          "type": "string"
        },
        "definition": {
          "type": "string",
          "description": "ORST definition field (Thai)"
        },
        "source": {
          "type": "string",
          "default": "ORST"
        },
        "normalized": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "normalizedSense": {
      "type": "object",
      "properties": {
        "id": {
          "type": ["number", "string"]
        },
        "index": {
          "type": "number"
        },
        "selected": {
          "type": "boolean"
        },
        "thaiWord": {
          "type": "string"
        },
        "senseNumber": {
          "type": "string"
        },
        "pos": {
          "type": "string"
        },
        "posEnglish": {
          "type": "string",
          "description": "English part of speech"
        },
        "meaningThai": {
          "type": "string",
          "description": "Compact gloss in Thai"
        },
        "meaningEnglish": {
          "type": "string",
          "description": "Compact gloss in English"
        },
        "descriptionThai": {
          "type": "string",
          "description": "Short clarification in Thai"
        },
        "descriptionEnglish": {
          "type": "string",
          "description": "Short clarification in English"
        },
        "source": {
          "type": "string"
        },
        "normalized": {
          "type": "boolean",
          "default": true
        },
        "normalizedAt": {
          "type": "string",
          "format": "date-time"
        },
        "normalizationVersion": {
          "type": "string",
          "default": "1.0"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "originalData": {
          "type": "object",
          "description": "Preserved original ORST data"
        }
      }
    }
  },
  "additionalProperties": false
}
