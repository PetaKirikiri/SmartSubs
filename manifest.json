{
  "manifest_version": 3,
  "name": "Smart Subs",
  "version": "0.1.0",
  "description": "Edit and enhance Netflix subtitles for language learning",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.netflix.com/*",
    "https://dictionary.orst.go.th/*",
    "https://api.aiforthai.in.th/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
